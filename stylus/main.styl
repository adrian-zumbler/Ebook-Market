@import "fonts.styl"


color_letra = #C4C4C4
azul_aqua = #53C0BB
verde_pistache =#95F88F
azul_facebook = #3B5998
azul_twitter = #30D8F0
negro = #201D1D
a
	text-decoration none

body
	background-image url("fondo.jpg");
	font-size 16px
	color color_letra
	margin 0
	font-family 'Varela Round', sans-serif
figure
	margin 0
//Clases generica
.right
	float right
.left
	float left
.margin
	margin 0	
.inline-block
	display inline-block	

.eslogan
	font-size 2.5em
	color white
.login
	background rgba(azul_aqua, 0.7)
	height 250px
	border-radius 6px
	margin 0 0.4em
	.wraper-login
		margin 1em
		text-align center
		padding-top 1em

		.title-login
			text-align center
			display block
			font-size 1.5em
			color white
			margin-bottom 1em
		.input-user
			padding 0.5em
			border-radius 4px
			border 1px solid white
			margin-left 27px
		.input-pass
			padding 0.5em
			border-radius 4px
			border 1px solid white
			margin 0.6em 0.5em	
		.iniciar
			background verde_pistache
			padding 0.8em 6em
			
			border 1px solid transparent
			margin 0.5em auto

.wraper-social-login
	margin 1em 0.5em
	.facebook
		background azul_facebook
		color white
		padding 0.8em 1em
		width 130px
		margin 0.5em auto
		.icon-facebook
			border-right 1px solid white
			padding 0.4em
		a
			padding-left 0.4em
			color white
	.twitter
		background azul_twitter
		color white
		padding 0.8em 1em
		width 130px
		margin 0.5em auto
		.icon-twitter
			border-right 1px solid white
			padding 0.4em
		a
			padding-left 0.4em
			color white	
.footer
	margin 0
	background negro
	overflow hidden
	text-align center
	width 100%
	height auto
	.header-footer
		color white
		text-align center

	.developers
		display inline-block
		width 250px

		.avatar
			float left
			vertical-align bottom
			margin 0.5em
			img
				border-radius 50%
				width 70px
				height 70px
		.contact
			color white
			padding 0.5em 
@media (min-width:700px)
	body
		overflow hidden

		.eslogan
			margin 1em
			width 70%
			
		.login
			width 400px
			float right	
			margin-bottom 6em
			margin-right 2em
			height 300px
		
			

			
	
					


